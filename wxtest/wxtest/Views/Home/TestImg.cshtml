
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>九图样式测试</title>
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <style>
        .pic9 {
            margin: 0em auto;
            width: 100%;
            height: 20em;
        }

            .pic9 li {
                width: 30%;
                height: 30%;
                float: left;
                background: #333;
                overflow: hidden;
                text-align: center;
                margin: 1px;
            }

        img {
            max-height: 100%;
            max-width: 100%;
        }
    </style>
</head>
<body>
    <div>1111111111</div>
    <ul class="pic9">
        <li>
            <img src="~/Images/images/0.jpg" />
        </li>
        <li>
            <img src="~/Images/images/30914399819730891.jpg" />
        </li>
        <li>
            <img src="~/Images/images/38394806875964533.jpg" />
        </li>
        <li>
            <img src="~/Images/images/484979960726036633.jpg" />
        </li>
        <li>
            <img src="~/Images/images/543356831054109775.jpg" />
        </li>
        <li>
            <img src="~/Images/images/547948945112280575.jpg" />
        </li>
        <li>
            <img src="~/Images/images/689350532904922449.jpg" />
        </li>
    </ul>
    <div>2222222222</div>
</body>
</html>
<script>
    $(document).ready(function () {
        $(".pic9").height($(window).height() / 3 * 2);
        $("li").each(function (index, element) {
            $(element).click(function () {
                var clone = $(this).clone().css({
                    "width": "100%",
                    "height": "100%",
                    "top": "0em",
                    "left": "0em",
                    "position": "absolute",
                    "background-color": "#333",
                    "overflow": "hidden",
                    "text-align": "center",
                    "display": "none"
                });
                $(document.body).append(clone);
                clone.unbind().show().click(function () {
                    $(this).remove();
                });
            });
        });
    });
</script>